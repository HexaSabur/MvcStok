@using MvcStok.Models.Entity
@model List<TblUrunler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLyout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>ÜRÜN ID</th>
        <th>ÜRÜN ADI</th>
        <th>MARKASI</th>
        <th>KATEGORİ</th>
        <th>FİYAT</th>
        <th>STOK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    <tbody>
        @foreach (var urun in Model)
        {
            <tr>
                <th>@urun.UrunID</th>
                <td>@urun.UrunAd</td>
                <td>@urun.Marka</td>
                <td>
                    @if (urun.TblKategoriler != null)
                    {
                        @urun.TblKategoriler.KategoriAd
                    }
                    else
                    {
                        <span>kategori yok</span>
                    }
                            </td>
                <td>@urun.Fiyat</td>
                <td>@urun.Stok</td>
                <td><a href="/Kategori/SIL/@urun.UrunID" class="btn btn-danger">SIL</a></td>
                <td><a href="/Kategori/GUNCELLE/@urun.UrunID" class="btn btn-success">GUNCELLE</a></td>

            </tr>
        }
</table>
<a href="/Urun/YENIURUN/" class="btn btn-primary">YENI URUN EKLE</a>